<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:MJC_Apuntes.Views"
             mc:Ignorable="d"
             x:Class="MJC_Apuntes.Views.StatsPage">

    <FlexLayout Direction="Column" JustifyContent="Start" AlignItems="Center" BackgroundColor="#F5F5F5" Padding="20">
        <Label Text="MJ" FontSize="72" FontAttributes="Bold" TextColor="#2196F3"/>
        <Entry x:Name="InputEntry" Placeholder="Ingrese texto" BackgroundColor="#E0E0E0" Margin="10" FontSize="18" TextColor="Black"/>
        <Button Text="Calcular" Clicked="OnCalculateClicked" BackgroundColor="#4CAF50" TextColor="White" Margin="10"/>
        <Label x:Name="ResultLabel" FontSize="18" TextColor="#333333" Margin="10"/>
        <Button Text="Limpiar" Clicked="OnClearClicked" BackgroundColor="#FF5252" TextColor="White" Margin="10"/>
    </FlexLayout>
</ContentPage>
